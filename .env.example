# Base URL used for canonical and OG metadata
NEXT_PUBLIC_SITE_URL=https://theblueteam.io

# Toggle for optional analytics injector (off by default)
NEXT_PUBLIC_ANALYTICS_ENABLED=false
# Set provider key when analytics is enabled
NEXT_PUBLIC_ANALYTICS_PROVIDER=TODO:analytics-provider
NEXT_PUBLIC_ANALYTICS_ID=TODO:analytics-id

# SMTP credentials for contact form delivery
SMTP_HOST=TODO:smtp-host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=TODO:smtp-user
SMTP_PASS=TODO:smtp-pass
SMTP_FROM=Blue Team Cyber <noreply@theblueteam.io>
CONTACT_TO=TODO:contact-recipient@theblueteam.io

# Contact form anti-abuse controls
CONTACT_RATE_LIMIT_MAX=5
CONTACT_RATE_LIMIT_WINDOW_MS=60000
